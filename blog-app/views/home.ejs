<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog Home</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <h1>Blog Posts</h1>
    <a href="/add-post">Add New Post</a>
    <ul>
        <% posts.forEach(post => { %>
            <li>
                <a href="/post/<%= post.id %>"><%= post.title %></a>
            </li>
        <% }); %>
    </ul>
</body>
</html>
